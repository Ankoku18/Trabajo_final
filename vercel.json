{
  "version": 2,
  "projectId": "csu-colsof",
  "name": "CSU COLSOF - Gesti√≥n de Casos",
  "public": false,
  
  "buildCommand": "npm install",
  "installCommand": "npm install",
  
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  },
  
  "builds": [
    {
      "src": "Proyecto de Software CSU - COLSOF/api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "Proyecto de Software CSU - COLSOF/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Proyecto de Software CSU - COLSOF"
      }
    }
  ],
  
  "functions": {
    "Proyecto de Software CSU - COLSOF/api/index.js": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs18.x"
    }
  },
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Proyecto de Software CSU - COLSOF/api/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/Usuario GESTOR/(.*)",
      "dest": "Proyecto de Software CSU - COLSOF/Usuario GESTOR/$1"
    },
    {
      "src": "/Usuario ADMINISTRDOR/(.*)",
      "dest": "Proyecto de Software CSU - COLSOF/Usuario ADMINISTRDOR/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Proyecto de Software CSU - COLSOF/api/index.js"
    }
  ],
  
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

